<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %>: Feed</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    
    <div class="container px-4">
        <div class="row gx-5">
          <div class="col border">
            1 of 3
          </div>
          <div class="col-6 border">
            <h1>Your Feed</h1>

            <div class="accordion mb-3" id="accordionExample">
                <div class="accordion-item">
                  <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                      New Post
                    </button>
                  </h2>
                  <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                      <form action="/posts" enctype="multipart/form-data" method="post">
                        <label class="form-label">
                            Title:
                            <input name="title" class="form-control" required>
                        </label>
                        <label class="form-label">
                            Description:
                            <input name="description" class="form-control" required>
                        </label>
                        <label class="form-label">
                            Golf Course:
                            <input name="course" class="form-control" required>
                        </label>
                        <label class="form-label">
                            Par:
                            <input name="par" class="form-control" required>
                        </label>
                        <label class="form-label">
                            Score:
                            <input type="number" name="score" class="form-control" required>
                        </label>
                        <label class="form-label">
                            Image:
                            <input type="file" name="image" class="form-control">
                        </label>
                        <button class="btn btn-outline-primary">Create Post</button>
                        </form>
                    </div>
                  </div>
                </div>
            </div>


            

            <% posts.forEach(post => { %>
            <div class="card mb-5">
                <div class="card-header d-flex flex-row align-items-center justify-content-between">
                    <h5><%= post.author.username %> +13.1</h5>
                    <p><small><%= post.timestamp.toLocaleDateString('en-GB', {weekday: 'long', day: 'numeric', month: 'long'}) %> at 
                    <%= post.timestamp.toLocaleTimeString('en-GB', {hour: 'numeric', minute: 'numeric', hour12: true}) %></small></p>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                        <h5 class="card-title"><%= post.title %></h5>
                        <h5>
                            <%= post.score %> (
                                <% if (post.score > post.par) { %>
                                    +<%= post.scoreToPar %>
                                <% } else if (post.score === post.par) { %>
                                    E
                                <% } else { %>
                                    <%= post.scoreToPar %>
                                <% } %>
                            )
                        </h5>
                    </div>
                    <p><strong><%= post.course %></strong> | Par <%= post.par %></p>
                    <p class="card-text"><%= post.description %></p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>

            <% }); %>
          </div>
          <div class="col border">
            3 of 3
          </div>
        </div>
      </div>

</body>
</html>