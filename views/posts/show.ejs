<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= post.author.username %>'s Post</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    
    <div class="container px-4">
        <div class="row gx-5">
          <div class="col">
            <!-- 1 of 3 -->
          </div>
          <div class="col-7">
            <div class="pb-5"></div>

            <!-- Post -->

            <div class="card mb-5 mt-5">
                <div class="card-header d-flex align-items-start justify-content-between pb-0 pt-3">
                    <div class="d-flex  flex-column">
                        <h5><%= post.author.username %> +13.1</h5>
                        <p><small><%= post.timestamp.toLocaleDateString('en-GB', {weekday: 'long', day: 'numeric', month: 'long'}) %> at 
                        <%= post.timestamp.toLocaleTimeString('en-GB', {hour: 'numeric', minute: 'numeric', hour12: true}) %></small></p>
                    </div>
                    <% if (post.author._id.equals(user._id)) { %>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#editModal">
                            Edit
                        </button>
                        
                        <!-- Modal -->
                        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h1 class="modal-title fs-5" id="editModalLabel">Edit Post</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/posts/<%= post._id %>?_method=PUT" enctype="multipart/form-data" method="post">
                                        <label class="form-label">
                                            Title:
                                            <input name="title" class="form-control" required value="<%= post.title %>">
                                        </label>
                                        <label class="form-label">
                                            Description:
                                            <input name="description" class="form-control" required value="<%= post.description %>">
                                        </label>
                                        <label class="form-label">
                                            Golf Course:
                                            <input name="course" class="form-control" required value="<%= post.course %>">
                                        </label>
                                        <label class="form-label">
                                            Par:
                                            <input name="par" class="form-control" required value="<%= post.par %>">
                                        </label>
                                        <label class="form-label">
                                            Score:
                                            <input type="number" name="score" class="form-control" required value="<%= post.score %>">
                                        </label>
                                        <label class="form-label">
                                            Image:
                                            <input type="file" name="image" class="form-control">
                                        </label>
                                        <button class="btn btn-outline-primary">Update Post</button>
                                    </form>
                                    <form action="/posts/<%= post._id %>?_method=DELETE" method="post">
                                        <button class="btn btn-outline-danger mt-2">Delete Post</button>
                                    </form>
                                </div>
                            </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                <div class="card-body pb-0 container">
                    <div class="d-flex flex-row justify-content-between">
                        <h5 class="card-title"><%= post.title %></h5>
                        <h5>
                            <%= post.score %> (
                                <% if (post.score > post.par) { %>
                                    +<%= post.scoreToPar %>
                                <% } else if (post.score === post.par) { %>
                                    E
                                <% } else { %>
                                    <%= post.scoreToPar %>
                                <% } %>
                            )
                        </h5>
                    </div>
                    <p><strong><%= post.course %></strong> | Par <%= post.par %></p>
                    <p class="card-text pb-1"><%= post.description %></p>

                    
                    <img src="<%= post.images %>" class="object-fit-contain border rounded img-fluid">


                    <div class="d-flex flex-row pt-2 gap-2 align-items-baseline border-bottom justify-content-between">
                        <div class="d-flex flex-row gap-2 align-items-baseline">
                            <h4>üëç</h4>
                            <p><%= post.likedByUsers.length %></p>
                            <% if (post.likedByUsers.some((userId) => userId.equals(user._id))) { %>
                                <form action="/posts/<%= post._id %>/like?_method=DELETE" method="post">
                                    <button class="btn btn-light">Unlike</button>
                                </form>
                            <% } else { %>
                            <form action="/posts/<%= post._id %>/like" method="post">
                                <button class="btn btn-outline-primary">Like</button>
                            </form>
                            <% } %>
                        </div>
                        <button class="btn btn-light" onclick="document.getElementById('commentTextarea').focus();">Comment</button>
                        <p><%= post.comments.length %> <%= post.comments.length === 1 ? 'Comment' : 'Comments' %></p>
                    </div>
                    <div class="p-2 border-bottom d-flex flex-column">
                        <% post.comments.forEach(comment => { %>
                            <div class="card text-bg-light rounded-5 d-inline-block w-auto mb-2 align-self-start flex-shrink-0">
                                <div class="card-body pt-1 pb-1">
                                    <p class="mb-1 mt-1"><small><strong><%= comment.username %></strong></small></p>
                                    <p class="mb-2"><%= comment.text %></p>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                    <div class="form-group position-relative mb-3 mt-3">
                        <form action="/posts/<%= post._id %>/comment" method="post">
                            <textarea class="form-control" id="commentTextarea" name="comment" rows="2" placeholder="Add a comment:" required></textarea>
                            <button type="submit" class="btn btn-sm btn-primary position-absolute end-0 bottom-0 m-2" style="padding: 0.5rem; line-height: 1;">
                                <i class="fas fa-paper-plane">Submit</i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>

          </div>
          <div class="col">
            <!-- 3 of 3 -->
          </div>
        </div>
      </div>
</body>
</html>